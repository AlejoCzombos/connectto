---
import CorporatePlans from '../../components/plans/CorporatePlans.astro';
import GamerPlan from '../../components/plans/GamerPlan.astro';
import ResidentialsPlans from '../../components/plans/ResidentialsPlans.astro';
import Layout from '../../layouts/Layout.astro';

import json from '../../data/plans.json';
import AdvertisingBanner from '../../components/home/AdvertisingBanner.astro';
const {header: {image, subtitle, title}} = json
---

<Layout title="Connectto - Internet de fibra óptica" desciption='Internet de fibra óptica'>
    <main class="mt-32">
        <header class="relative h-[30rem] flex flex-col justify-center items-start gap-4">
            <div class="text-center lg:text-start p-0 md:pl-60 lg:pl-80 ">
                <h1>{title}</h1>
                <p>{subtitle}</p>
            </div>
            <img class="absolute h-full w-full object-cover top-0 left-0 -z-10" src={image} alt="Header seccion planes">
            <div id="grad"></div>
        </header>
        <ResidentialsPlans />
        <CorporatePlans />
        <!-- <GamerPlan /> -->
        <AdvertisingBanner />
    </main>
</Layout>

<style>
    #grad {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
    background: linear-gradient(89.62deg, #25272998 14.67%, rgba(37, 39, 41, 0.505) 56.45%, rgba(37, 39, 41, 0) 86.47%);
    z-index: -1;
  }
</style>