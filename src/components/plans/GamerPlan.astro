---
import PrimaryButton from "../UI/PrimaryButton.astro";
import PlanCard from "../home/PlanCard.astro";

import json from "../../data/plans.json"
import WhatsAppMessageEncoder from "../../utils/WhatsAppMessageEncoder";

const {title, subtitle, image, features, upload_megas, download_megas, button} = json["gamer-plan"]
---

<section class="relative my-5 lg:my-16">
    <div class="flex flex-col md:flex-row items-center justify-center md:justify-between max-w-6xl w-full mx-auto">
        <header class="w-[90%] lg:w-[50%] z-10 space-y-4">
            <h2 class="text-6xl lg:text-8xl text-secondary-600" set:html={title}></h2>
            <p set:html={subtitle}></p>
        </header>
        <div>
            <PlanCard megas={upload_megas} dowload={download_megas} features={features}>
                <PrimaryButton target='_blank' href={WhatsAppMessageEncoder(button.message)} text={button.text} />
            </PlanCard>
        </div>
    </div>
    <img class="absolute h-full w-full object-cover top-0 left-0 -z-10" src={image} alt="Header plan gamer">
    <div id="grad"></div>
</section>

<style>
    #grad {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: transparent; 
    background: linear-gradient(89.62deg, #252729d6 14.67%, rgba(37, 39, 41, 0.505) 56.45%, rgba(37, 39, 41, 0) 86.47%);
    z-index: -1;
  }
</style>