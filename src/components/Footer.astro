---
import NavigationItem from "./UI/NavigationItem.astro";
import InstagramIcon from "./Icons/InstagramIcon.astro";
import FacebookIcon from "./Icons/FacebookIcon.astro";

import generateGmailLink from "../utils/GenerateGmailLink";

import FooterInfo from "../data/footer.json"
const { links, contact, columns } = FooterInfo
---

<footer class="bg-[#252729] flex flex-col lg:flex-row justify-center items-center lg:items-start gap-6 lg:gap-12 p-8 lg:p-16">
    <div class="flex flex-col items-center gap-3">
        <img class="h-12 object-contain" src="/logo.png" alt="logo">
        <div class="flex items-center gap-1.5">
            <svg class="stroke-white size-5" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><desc/><g><path d="M27,12   c0-6.075-4.925-11-11-11S5,5.925,5,12c0,8,11,19,11,19S27,20,27,12z" fill="none" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2"/><circle cx="16" cy="12" fill="none" r="4" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2"/></g></svg>
            <NavigationItem class="text-sm" href="/" text="Av. 9 de Julio 3287, Resistencia Chaco" />
        </div>
    </div>
    <div class="grid grid-cols-2 gap-3 md:grid-cols-4">
    {
        columns.map(({name, links}) => (
            <div>
                <h4>{name.toUpperCase()}</h4>
                <ul class="flex flex-col">
                    {links.map(({href, text, blank}) => (
                        <NavigationItem target={blank ? "_blank" : ""} class="text-sm" href={href} text={text} />
                    ))}
                </ul>
            </div>
        ))
    }
        <div>
            <h4>CONTACTO</h4>
            <div class="flex items-center gap-1.5">
                <svg class="size-5" viewBox="0 0 12 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1.54235 1.14713L5.90894 5.15544C6.02554 5.26247 6.20465 5.26247 6.32125 5.15544L10.6878 1.14713M2.4569 8.15867H9.77329C10.4467 8.15867 10.9927 7.61273 10.9927 6.93928V2.06168C10.9927 1.38823 10.4467 0.842285 9.77329 0.842285H2.4569C1.78345 0.842285 1.2375 1.38823 1.2375 2.06168V6.93928C1.2375 7.61273 1.78345 8.15867 2.4569 8.15867Z" stroke="white" stroke-width="0.914549" stroke-linejoin="round"/>
                </svg>
                <NavigationItem target='_blank' class="text-sm" href={generateGmailLink({to: FooterInfo.contact.email})} text={FooterInfo.contact.email} />
            </div>
            {
                contact.phones.map(phone => (
                <div class="flex items-center gap-1.5 text-sm text-white">
                    <svg class="size-5" viewBox="0 0 13 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6.24469 12.0537C2.70161 8.06032 2.3763 5.41032 5.72818 1.07198C5.81624 0.957993 5.97464 0.921313 6.10322 0.98623L7.99735 1.94252C8.13419 2.01161 8.19784 2.17204 8.14559 2.31615L7.42097 4.3144C7.37929 4.42934 7.27258 4.50796 7.15044 4.51369L5.94259 4.5704C5.82834 4.57576 5.72632 4.64524 5.68145 4.75045C5.08555 6.14764 5.11079 6.95862 5.85473 8.23557C5.90387 8.31992 5.99195 8.3738 6.08929 8.38136L7.36421 8.48028C7.47258 8.48869 7.56813 8.55452 7.61459 8.65278L8.53442 10.598C8.59995 10.7366 8.55161 10.9023 8.42184 10.9839L6.63153 12.1097C6.50697 12.188 6.34235 12.1638 6.24469 12.0537Z" stroke="white" stroke-width="0.848057" stroke-linecap="round"/>
                        <path d="M9.82043 5.01562C10.5163 5.96774 10.4425 6.61036 9.82043 7.43865" stroke="white" stroke-width="0.908633" stroke-linecap="round"/>
                        <path d="M10.7291 3.80371C11.9406 5.3181 12.052 6.78964 11.032 8.64975" stroke="white" stroke-width="0.908633" stroke-linecap="round"/>
                    </svg>
                    <NavigationItem target='_blank' class="text-sm" href={`https://wa.me/+549${phone}`} text={phone} />
                </div>
                ))
            }
        </div>
    </div>
    <div class="flex flex-col justify-between items-center lg:items-start">
        <div>
            <h4 class="text-center lg:text-start">SEGUINOS</h4>
            <div class="flex justify-center lg:justify-start gap-3">
                <a target='_blank' href={links.instagram}>
                    <InstagramIcon />
                </a>
                <a target='_blank' href={links.facebook}>
                    <FacebookIcon />
                </a>
            </div>
        </div>
        <a target='_blank' href="https://www.linkedin.com/company/lav-ux/">
            <img class="h-12 object-contain transition-transform duration-200 hover:scale-110 ease-in-out" src="/LAV_logo.png" alt="logo LAV">
        </a>
    <div>

    </div>
</footer>

<style>
    h3 {
        margin-bottom: 6px;
    }
    a {
        @apply text-sm
    }
</style>