---
import SwiperIcon from './Icons/SwiperIcon.astro';
---

<script>
import Swiper from 'swiper';
import 'swiper/css';
import { Navigation } from 'swiper/modules';
import 'swiper/css/navigation';

const swiper = new Swiper('.swiper', {
  modules: [Navigation],
  loop: true,
  spaceBetween: 0,
  breakpoints: {
    768: {
      slidesPerView: 1,
      spaceBetween: 0,
    },
    1024: {
      slidesPerView: 1,
      spaceBetween: 0,
    },
  },
  navigation: {
    prevEl: '.swiper-button-prev',
    nextEl: '.swiper-button-next',
  },
});
</script>


<section class="swiper w-full h-[600px] mt-6">
  <div class="swiper-wrapper" id="my-slider">
    <div class="swiper-slide h-[600px] rounded overflow-hidden">
      <img src="/images/image1.jpg" alt="" class="w-full h-full object-cover">
    </div>
    <div class="swiper-slide h-[600px] rounded overflow-hidden">
      <img src="/images/image2.jpg" alt="" class="w-full h-full object-cover">
    </div>
    <div class="swiper-slide h-[600px] rounded overflow-hidden">
      <img src="/images/image3.jpg" alt="" class="w-full h-full object-cover">
    </div>
    <div class="swiper-slide h-[600px] rounded overflow-hidden">
      <img src="/images/image4.jpg" alt="" class="w-full h-full object-cover">
    </div>
  </div>
  <div class="swiper-button-prev rounded flex justify-center items-center ml-16">
    <SwiperIcon />
  </div>
  <div class="swiper-button-next rounded flex justify-center items-center mr-16 transform rotate-180">
    <SwiperIcon />
  </div>
</section>

<style>
  .swiper-button-next::after,
  .swiper-button-prev::after {
    content: '';
  }
  @media (max-width: 768px) {
    .swiper-slide {
      width: 70%;
      height: 400px;
    }
    .swiper-button-prev,
    .swiper-button-next {
      display: none;
    }
  }
</style>