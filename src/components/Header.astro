---
import Navigation from "./Navigation.astro";
import PrimaryButton from "./UI/PrimaryButton.astro";

import json from "../data/header.json"
const {buttons} = json
---

<header class="fixed top-0 left-0 shadow-lg w-full h-36 lg:h-32 z-50 flex justify-center bg-slate-700 bg-opacity-20 backdrop-blur-lg drop-shadow-xl">
    <div class="flex flex-col lg:flex-row justify-around lg:justify-between items-center w-[85%]">
        <a href="/">
            <img src="/logo.png" alt="Logo Connectto" class="max-h-16">
        </a>
        <Navigation />
        <div class="flex justify-center items-center gap-3 w-[300px]">
            {buttons.map((button, index) => (
                <PrimaryButton text={button.text} href={button.link} key={index}/>
            ))}
        </div>
    </div>
</header>