---
import PrimaryButton from "../UI/PrimaryButton.astro";

import json from "../../data/home.json"
const {title, subtitle, button} = json["gamer-plan"]
---

<section id="gamerPlan">
    <header class="w-[60%] lg:w-[40%] pl-12 lg:pl-24">
        <h2 set:html={title}></h2>
        <p set:html={subtitle}></p>
        <PrimaryButton class="w-32" text={button.text} href={button.href} />
    </header>
    <svg id="circle" width="527" height="528" viewBox="0 0 527 528" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="263.5" cy="263.887" r="263.5" fill="#252729"/>
    </svg>
    <img src="/images/imagen-plangamer.jpeg" alt="Imagen plan gamer">
</section>

<style>
    #gamerPlan{
        background: var(--Gris, #252729);
        width: 100%;
        height: 498px;
        position: relative;
    }
    header{
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        z-index: 2;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1rem;
    }
    header h2{
        font-size: 97px;
        line-height: 85px;
        letter-spacing: -4.5px;
        color: #FF8300;
    }
    header span{
        font-weight: bold;
    }
    img{
        height: 498px;
        overflow: hidden;
        object-fit: cover;
        object-position: center;
        position: absolute;
        top: 0;
        left: 55%;
        transform: translate(-20%);
    }
    #circle{
        position: absolute;
        overflow: hidden;
        top: 0;
        height: 100%;
        left: 45%;
        transform: translate(-59%);
        z-index: 1;
    }
</style>