---
import Section from "../UI/Section.astro";
---

<Section class="flex flex-col items-center">
    <h2 class="text-center pb-5 lg:pb-10">Contacto</h2>
    <form action="" class="flex flex-col w-full max-w-xl gap-2 text-white">
        <div class="grid grid-cols-1 grid-rows-2 lg:grid-rows-1 lg:grid-cols-2 gap-2">
            <input type="text" placeholder="Nombre" class="bg-transparent border border-[#FF8300] rounded-xl py-3 px-6 w-full">
            <input type="text" placeholder="Apellido" class="bg-transparent border border-[#FF8300] rounded-xl py-3 px-6 w-full">
        </div>
        <input type="email" placeholder="Email" class="bg-transparent border border-[#FF8300] rounded-xl py-3 px-6 w-full">
        <textarea class="text-bold min-h-20 max-h-52 bg-transparent border border-[#FF8300] rounded-xl py-3 px-6 w-full" placeholder="Tu consulta"></textarea>
        <button class="bg-[#FF8300] border border-white w-full py-3 text-xl rounded-lg">Contactanos</button>
    </form>
</Section>