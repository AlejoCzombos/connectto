---
const {href, text} = Astro.props;
---

<a href={href} class="font-sans">{text}</a>

<style>
    a{
    background: linear-gradient(90deg, #02498E 0%, #011528 100%);
    border: 1px solid #486284;
    color: #F9CD9E;
    width: 149px;
    height: 47px;
    border-radius: 50px;

    padding: 12px 30px 12px 30px;
    gap: 10px;


    font-size: 19px;
    font-weight: 600;
    line-height: 24px;
    letter-spacing: 1px;
    text-align: left;

}
</style>