---
import json from "../../data/home.json"
import WhatsAppMessageEncoder from "../../utils/WhatsAppMessageEncoder";
const {title, subtitle, image, features, card} = json.banner
---

<section class="relative h-[30rem] flex justify-between items-center gap-4 px-5 lg:px-0 my-8 lg:my-16">
    <div class="text-start mx-auto max-w-4xl w-full gap-5 relative flex flex-col sm:flex-row">
        <div class="flex flex-col items-start justify-center gap-5 max-w-lg">
            <div class="from-[#994F00] bg-gradient-to-r to-[#FF8300] bg-opacity-75 rounded-2xl shadow-lg p-5 max-w-[21rem] lg:max-w-[25rem] m-auto lg:m-0">
                <h2 class="text-3xl lg:text-4xl" set:html={title}></h2>
            </div>
            <p class="font-bold text-2xl lg:text-4xl max-w-lg" set:html={subtitle}></p>
            <img class="max-w-40 mx-auto lg:m-0" src="/logo.png" alt="Logo Connectto">
        </div>
        <div class="flex flex-row sm:flex-col justify-between items-center w-full lg:max-w-14 gap-10 lg:gap-4">
            {
                features.map(({description, icon}) => (
                    <div class="flex flex-col items-center w-full max-w-36 gap-2">
                        <div class="size-16 bg-secondary-600 rounded-full p-2 flex justify-center items-center">
                            <img src={icon} alt={description} />
                        </div>
                        <p class="text-center text-sm">{description}</p>
                    </div>
                ))
            }
        </div>
    </div>
    <article id="card" class="hidden lg:block rounded-xl m-auto relative w-full min-w-[200px] max-w-[350px] shadow-lg hover:shadow-xl hover:transform hover:scale-105 duration-300 transition-all">
        <header id="card-header" class="flex justify-center items-center min-w-[400px] max-w-[400px] p-5 rounded-lg absolute top-8 left-1/2 transform -translate-x-1/2">
            <p class="text-3xl lg:text-4xl text-center">{card.title}</p>
        </header>
        <footer class="px-10 py-12 pt-56 text-balance flex flex-col justify-between">
            <ul class="list-disc list-outside pl-6" role="list">
                {card.features.map((item) => (
                    <li>{item}</li>
                ))}
            </ul>
        </footer>
    </article>
    <img class="absolute h-full w-full object-cover top-0 left-0 -z-10" src={image} alt="Imagen plan gamer">
</section>


<style>
#card {
    /* background: linear-gradient(#004086 0%, rgb(1, 34, 66) 100%); */
    background-color: #004086;
}
#card-header {
    background: linear-gradient(#FF8300 0%, #994F00 100%);
}
li{
    font-size: 18px;
    line-height: 20px;
    padding: 8px 0;
    color: #FFFFFF;
}
</style>