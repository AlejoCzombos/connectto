---
import PlanCard from "./PlanCard.astro";
import Section from "../UI/Section.astro";
import PrimaryButton from "../UI/PrimaryButton.astro";
import SecondaryButton from "../UI/SecondaryButton.astro";

import json from "../../data/home.json"
const {title, plans} = json.plans
---

<Section>
  <h2 class="text-[33px] text-center mb-4">{title}</h2>
  <div class="grid grid-cols-1 grid-rows-3 xl:grid-rows-1 md:grid-rows-2 md:grid-cols-2 xl:grid-cols-3 gap-10 pt-10">
    {
      plans.map((plan, index) => (
        <PlanCard gigas={plan.megas} features={plan.features}>
          <PrimaryButton href="/" text="Contratar"/>
        </PlanCard>
      ))
    }
  </div>
  <div class="flex justify-center items-center pt-6">
    <SecondaryButton class="w-full md:w-auto" href="/" text="Ver mÃ¡s"/>
  </div>
</Section>
