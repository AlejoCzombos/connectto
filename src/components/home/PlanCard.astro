---
const {gigas, list } = Astro.props;
---

<article id="card" class="rounded-xl m-auto relative">
    <header id="card-header" class="font-kanit flex flex-col justify-center items-center size-64 rounded-lg absolute -top-5 left-1/2 transform -translate-x-1/2">
        <h3 class="text-[70px] lg:text-[100px] font-normal">{gigas}</h3>
        <p class="text-5xl lg:text-6xl">megas</p>
    </header>
    <footer class="px-5 py-5 pt-64 text-balance flex flex-col justify-between">
        <ul class="list-disc list-outside pl-6" role="list">
            {list.map((item) => (
                <li>{item}</li>
            ))}
        </ul>
        <div class="flex justify-center items-center p-6">
            <slot/>
        </div>
    </footer>
</article>

<style>
#card {
    background: linear-gradient(#02498E 0%, #011528 100%);
}

#card-header {
    background: #1278F1;
    line-height: 60px;
    letter-spacing: -5px;
}
#card-header p {
    line-height: 53px;
    letter-spacing: -1px;
}
li{
    font-size: 18px;
    line-height: 20px;
    padding: 5px 0;
    color: #FFFFFF;
}
</style>