---
import Section from "../UI/Section.astro";

import json from "../../data/companies.json"
const { features } = json
---

<Section class="flex flex-wrap justify-center gap-5">
    
    {
        features.map(({description, icon}) => (
            <div class="flex flex-col items-center w-full max-w-36 gap-8">
                <img class="size-32" src={icon} alt={description} />
                <p class="text-center text-lg">{description}</p>
            </div>
        ))
    }
</Section>