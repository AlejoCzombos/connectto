---
import Section from "../UI/Section.astro";

import json from "../../data/companies.json"
const { "extended-features": features } = json
---

<Section class="flex flex-wrap justify-center gap-x-0 lg:gap-x-10 gap-y-16">
    
    {
        features.map(({icon, title, features}) => (
            <div class="flex flex-col w-full items-start lg:max-w-[45%] rounded-[2.5rem] border border-[#5894CB] bg-opacity-30 backdrop-blur-lg  p-12 gap-5 relative">
                <h3 class="text-right">{title}</h3>
                <img class="size-16 absolute -top-8 left-8" src={icon} alt={`Icono de ${title}`}>
                <footer class="text-balance flex flex-col justify-between text-white">
                    <ul class="list-disc list-outside pl-6" role="list">
                        {features.map((item) => (
                            <li>{item}</li>
                        ))}
                    </ul>
                </footer>
            </div>
        ))
    }
</Section>

<style>
    div {
        background: linear-gradient(90deg, rgba(88, 148, 203, 0.09) 0%, rgba(147, 180, 210, 0.3) 100%);
    }
    li {
        font-family: Kanit;
        font-size: 22px;
        line-height: 32.83px;
        text-align: left;
    }
</style>