---
import '@fontsource-variable/dm-sans';
import '@fontsource/kanit/200.css';
import '@fontsource/kanit/400.css';
import '@fontsource/kanit/500.css';
import '@fontsource/kanit/700.css';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import InfoIcons from '../components/InfoIcons.astro';

interface Props {
	title: string;
	desciption: string;
}

const { title, desciption } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={desciption} />
	</head>
	<body class="h-[100%]">
		<Header/>
		<slot />
		<InfoIcons/>
		<Footer/>
	</body>
</html>

<style is:global>
@tailwind base;

	@layer base{
		h1, h2 {
			@apply text-4xl xl:text-6xl tracking-tighter
		}
		h3 {
			@apply text-2xl xl:text-3xl tracking-tighter
		}
		h1, h2, h3, h4, h5, h6 {
			@apply text-white font-bold
		}
		p {
			@apply text-xl xl:text-2xl text-white
		}
		span {
			@apply font-bold
		}
		a{
			@apply text-white
		}
	}

	html {
			font-family: 'DM Sans Variable', sans-serif;
			height: auto;
			background-image: linear-gradient(90deg, #02498E 0%, #011528 100%);
		}

    body {
        height: auto;
        background-attachment: fixed;
        background-size: cover;
    }
</style>